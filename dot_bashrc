# .bashrc

# --------------------------------------------------------------------------------
# HELPFUL TOOLS
# --------------------------------------------------------------------------------
# Use this line of code view $PATH one line at a time
# echo "$PATH" | tr ':' '\n'

# If $PATH contains duplicate paths, remove them with this line of code
# export PATH=$(echo "$PATH" | tr ':' '\n' | awk '!seen[$0]++' | paste -sd:)

# --------------------------------------------------------------------------------
# SOURCE GLOBAL DEFINITIONS
# --------------------------------------------------------------------------------
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# --------------------------------------------------------------------------------
# PATH MODIFICATIONS
# --------------------------------------------------------------------------------
# # Add to $PATH safely without repetition
# if ! [[ ":$PATH:" == *":$HOME/<my/path/here>:"* ]]; then
#     PATH="$HOME/<my/path/here>:$PATH"
# fi

# Add homebrew to $PATH
if ! [[ ":$PATH:" == *":/home/linuxbrew/.linuxbrew/bin:"* ]]; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

export PATH

# --------------------------------------------------------------------------------
# USER SPECIFIC ALIASES AND FUNCTIONS 
# --------------------------------------------------------------------------------
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

alias la="ls -la"
alias nv="NVIM_APPNAME=nvim nvim"
alias nk="NVIM_APPNAME=nvim-kickstart nvim"

# --------------------------------------------------------------------------------
# EXPORT CUSTOM VARIABLES
# --------------------------------------------------------------------------------
export EDITOR="$HOME/.local/bin/custom-editor"

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

